Options -MultiViews -Indexes
DirectorySlash Off
RewriteEngine On
RewriteBase /

# 1. Direct fix for the /about/ path
# Points /about/ internally to about.html
RewriteRule ^about/$ about.html [L]

# 2. Fix for /about (no slash)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/about.html -f
RewriteRule ^about$ about.html [L]

# 3. Allow images inside the folder to still work
# Example: /about/photo.jpg
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^about/(.*)$ about/$1 [L]

# 4. Standard SPA Fallback (Crucial for static exports)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]